<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_izenkidea"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#C5CAE9"
    android:foreground="?attr/selectableItemBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/holder_hizkuntza"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:contentDescription="language icon"
            android:src="@drawable/es_icon" />

        <TextView
            android:id="@+id/holder_izenkidea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/holder_hizkuntza"
            android:textAppearance="@android:style/TextAppearance.Material"
            android:hint="en castellano"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>