<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#C5CAE9"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingEnd="30dp"
        android:paddingStart="10dp">


        <TextView
            android:id="@+id/holder_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:background="@drawable/borobila"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:hint="A"
            android:textAllCaps="true"
            android:textColor="#FFF"
            android:textSize="26sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/holder_icon"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/holder_izena"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:hint="Izena"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_description"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/sort_variant"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="@dimen/datuak_padding_small"
                    android:visibility="invisible"
                    />

                <ImageView
                    android:id="@+id/img_eustat"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/fire_grey"
                    android:visibility="invisible"
                    />
                <TextView
                    android:id="@+id/img_eustat_label"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/datuak_padding_small"
                    android:text="11"
                    android:visibility="invisible"
                    />

                <ImageView
                    android:id="@+id/img_graphics"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/chart_line_variant"
                    android:layout_marginEnd="@dimen/datuak_padding_small"
                    android:visibility="invisible"
                    />

            </LinearLayout>


        </LinearLayout>


        <CheckBox
            android:id="@+id/holder_gogokoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="5dp"
            android:button="@drawable/check_star"
            android:foregroundGravity="right" />

    </RelativeLayout>
</android.support.v7.widget.CardView>