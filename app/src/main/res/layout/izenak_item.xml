<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#C5CAE9"
    android:foreground="?attr/selectableItemBackground">

    <!-- //FIXME: change to Linear Layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="30dp"
        android:paddingStart="10dp"
        android:gravity="center">


        <TextView
            android:id="@+id/holder_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:background="@drawable/borobila"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:hint="A"
            android:textAllCaps="true"
            android:textColor="#FFF"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/holder_izena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/holder_icon"
            android:hint="Izena"
            android:textSize="16sp"
            android:textStyle="bold" />


        <CheckBox
            android:id="@+id/holder_gogokoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="5dp"
            android:button="@drawable/check_star"
            android:foregroundGravity="right" />

    </RelativeLayout>
</android.support.v7.widget.CardView>